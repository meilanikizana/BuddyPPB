<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    app:layoutDescription="@xml/activity_onboarding_scene"
    tools:context=".OnboardingActivity">

<!--ONBOARDING ONE-->
    <ImageView
        android:id="@+id/iv_onboarding1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:alpha="0"
        android:contentDescription="@string/buddy_halo"
        android:src="@drawable/buddy_sad"
        app:layout_constraintBottom_toTopOf="@id/tv_onboarding1_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding1_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:alpha="0"
        android:gravity="center_horizontal"
        android:text="@string/onboarding1_title"
        android:textAppearance="@style/TextAppearance.Onboarding.Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding1_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0"
        android:gravity="center_horizontal"
        android:text="@string/onboarding1_desc"
        android:textAppearance="@style/TextAppearance.Onboarding.Desc"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding1_title"
        tools:layout_editor_absoluteX="443dp" />

<!--ONBOARDING TWO-->
    <ImageView
        android:id="@+id/iv_onboarding2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/buddy_halo"
        android:src="@drawable/buddy_nulis"
        app:layout_constraintBottom_toTopOf="@id/tv_onboarding2_title"
        app:layout_constraintStart_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_onboarding2_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding2_title"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.Onboarding.Title"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding2_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding2_desc"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.Onboarding.Desc"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding2_title"
        app:layout_constraintStart_toEndOf="parent" />

<!--ONBOARDING THREE-->
    <ImageView
        android:id="@+id/iv_onboarding3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/buddy_cerita"
        android:contentDescription="@string/buddy_story"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/tv_onboarding3_title"
        app:layout_constraintStart_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_onboarding3_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding3_title"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.Onboarding.Title"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding3_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding3_desc"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.Onboarding.Desc"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding2_title"
        app:layout_constraintStart_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mulai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_now"
        android:textColor="@color/orange"
        android:backgroundTint="@color/pink"
        android:layout_marginTop="16dp"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding3_desc"
        app:layout_constraintStart_toEndOf="parent" />

<!--CIRCLE BUTTON MENU-->
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/menu1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        app:altSrc="@drawable/ic_circle_full_24"
        app:layout_constraintEnd_toStartOf="@+id/menu2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="@drawable/ic_circle_24"
        app:tint="@color/pink" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/menu2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:altSrc="@drawable/ic_circle_full_24"
        app:layout_constraintBottom_toBottomOf="@+id/menu1"
        app:layout_constraintEnd_toStartOf="@+id/menu3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/menu1"
        app:layout_constraintTop_toTopOf="@+id/menu1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_circle_24"
        app:tint="@color/pink" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/menu3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:altSrc="@drawable/ic_circle_full_24"
        app:layout_constraintBottom_toBottomOf="@+id/menu2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/menu2"
        app:layout_constraintTop_toTopOf="@+id/menu2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_circle_24"
        app:tint="@color/pink" />
</androidx.constraintlayout.motion.widget.MotionLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".JournalActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo -->
        <ImageView
            android:id="@+id/nameApp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/buddy_with_text"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Question -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feeling_ask"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/orange"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/nameApp"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Mood Icons -->
        <LinearLayout
            android:id="@+id/moodIconsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/questionText"
            app:layout_constraintStart_toStartOf="parent">

            <!-- HAPPY -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/happy_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/buddy_happy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/happy"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- NORMAL -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/normal_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/buddy_biasa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soso"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- ANXIOUS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/anxious_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/buddy_gelisah" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/worry"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- SAD -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/sad_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/buddy_sad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sad"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Streak Title -->
        <TextView
            android:id="@+id/streak_jurnal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/streak_jurnal"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/top_rounded_rect"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/moodIconsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Streak Count -->
        <TextView
            android:id="@+id/streak_jurnal_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:background="@drawable/bottom_rounded_rect"
            android:paddingBottom="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/streak_jurnal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Journal Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/journalCard"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/orange_card_bg"
            app:layout_constraintTop_toBottomOf="@id/streak_jurnal_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayo Buat Jurnalmu Sekarang!"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvCardSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ekspresikan Harimu dengan Jurnal"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvCardTitle"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/btnStartJournal"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/arrow_journal"
                android:background="@drawable/btn_journal_shadow"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:elevation="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCardSubtitle"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/buddyJournal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/buddy_journal"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Section Title -->
        <TextView
            android:id="@+id/tv_your_journal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_journal"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/journalCard"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- RECYCLER VIEW -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_journal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_your_journal_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- EMPTY VIEW -->
        <ImageView
            android:id="@+id/iv_buddy_empty_journal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/buddy_start_journal"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_your_journal_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
